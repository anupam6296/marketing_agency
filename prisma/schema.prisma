generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  // ✅ Prisma v7: NO url here
}

model Lead {
  id        String   @id @default(uuid()) @db.Uuid
  name      String
  email     String   @unique
  phone     String?
  company   String?
  budget    String?
  message   String
  source    String?  @default("website")
  status    String   @default("NEW") // NEW, CONTACTED, WON, LOST
  createdAt DateTime @default(now())
}

model CaseStudy {
  id         String   @id @default(uuid()) @db.Uuid
  title      String
  slug       String   @unique
  industry   String
  services   Json     // ✅ better than comma separated
  metrics    Json     // ✅ Json fits your comment
  coverImage String
  content    String
  published  Boolean  @default(false)
  createdAt  DateTime @default(now())
}

model Testimonial {
  id        String   @id @default(uuid()) @db.Uuid
  name      String
  role      String
  company   String
  quote     String
  avatar    String?
  rating    Int      @default(5)
  published Boolean  @default(true)
  createdAt DateTime @default(now())
}

model BlogPost {
  id             String   @id @default(uuid()) @db.Uuid
  title          String
  slug           String   @unique
  excerpt        String
  content        String
  tags           String   // keep as comma-separated for now (or Json later)
  coverImage     String?
  publishedAt    DateTime?
  seoTitle       String?
  seoDescription String?
  createdAt      DateTime @default(now())
}
